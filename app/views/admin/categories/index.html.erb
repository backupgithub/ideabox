<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header-idea"> Admin Restrict Page</div>
  </div>
</nav>

<% if @categories %>
<ul>
  <% @categories.each do |category| %>
    <li><%= category.name %></li>
    <ul>
      <li><%= link_to "Edit #{category.name} Category", edit_category_path(category) %></li>
      <li><%= link_to "Delete #{category.name} Category", category_path(category), method: :delete, data: {confirm: "Are you sure?" } %></li>
      <ul>
        <li><%= link_to "Create #{category.name} Idea", new_category_idea_path(category) %></li>
      </ul>
    </ul>
  <% end %>
</ul>
<% else %>
  <h1>You do not have any category defined yet.</h1>
<% end %>
